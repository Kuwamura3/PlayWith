<div class="row", style="padding-top: 20px;">
	<h4 class="col-md-2">コメント</h4>
	<% if user_signed_in? %>
		<%= form_with(url: users_comments_path, method: :post, class: "form-inline", remote: true) do |f| %>
			<%= f.hidden_field :commented_id, value: @user.id %>
			<%= f.text_area :text, rows:"2", class: "col-md-8 comment form-control", :size => "50" %>
			<%= f.submit "送信", class: "btn btn-md btn-info col-md-2" %>
		<% end %>
	<% end %>
</div>
<div class="row">
	<table class="table table-hover table-noborder col-md-offset-1 col-md-11">
		<% users_comments.each do |comment| %>
			<tr>
				<td class="t20">
					<%= link_to user_path(comment.user) do %>
						<%= comment.user.name %>
					<% end %>
				</td>
				<td class="t40"><%= comment.text %></td>
				<td class="t20"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
				<td class="t20"></td>
			</tr>
		<% end %>
	</table>
</div>
