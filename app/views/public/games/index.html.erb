<div class="row">
	<%= render partial: "layouts/error_messages" %>

	<h3>ゲーム一覧</h3>
	<% if @games.present? %>
		<%= render partial: "public/games/table", locals: { games: @games } %>
	<% else %>
		<h4>　ゲームはありません。</h4>
		<% if user_signed_in? %>
			<div class="col-md-2", style="padding-top: 20px;">
				<%= link_to "ゲームを追加したい", new_game_path, class:"btn btn-info btn-md" %>
			</div>
		<% end %>
	<% end %>
</div>
