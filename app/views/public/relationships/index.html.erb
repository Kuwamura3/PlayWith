<div class="row">
	<div class="col-md-6">
		<h3>フォロー一覧</h3>
		<% if @followings.present? %>
			<%= render partial: "public/relationships/table", locals: { users: @followings } %>
		<% else %>
			<h4>　フォローしている人はいません。</h4>
		<% end %>
	</div>

	<div class="col-md-6">
		<h3>フォロワー一覧</h3>
		<% if @followers.present? %>
			<%= render partial: "public/relationships/table", locals: { users: @followers } %>
		<% else %>
			<h4>　フォロワーはいません。</h4>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-offset-10 col-md-2">
		<%= link_to "プロフィールに戻る", user_path(@user), class:"btn btn-default btn-md" %>
	</div>
</div>
