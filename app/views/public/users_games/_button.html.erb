<% if users_games.find_by(game_id: game.id) %>
	<%= link_to "削除する", users_game_path(game), method: :delete, class: "glyphicon glyphicon-remove-sign", remote: true %>
<% else %>
	<%= link_to "追加する", users_games_path(game_id: game.id), method: :post, class: "glyphicon glyphicon-plus-sign", remote: true %>
	<!--game_idを受け渡して、POST先のcreateで受け取って保存↑-->
<% end %>
