<div class="row">
	<div class="col-md-8">

		<div class="row">
			<div class="col-md-4", style="padding-bottom: 10px;">
				<h3>プロフィール</h3>
				<% if @user.image == nil %>
					<%= image_tag "noimage.png", :size => "100x100" %>
				<% else %>
					<%= attachment_image_tag @user, :image %>
				<% end %>
			</div>

			<div class="col-md-8", style="padding-top: 60px;">

				<% if @user == current_user %>
					<p><%= link_to "フォロー・フォロワー一覧", relationships_path, class: "btn btn-primary" %></p>
					<p><%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary" %></p>
				<% else %>

					<% if %>
						<p><%= link_to "フォロー", games_path, class: "btn btn-info" %></p>
					<% else %>
						<p><%= link_to "フォロー解除", games_path, class: "btn btn-danger" %></p>
					<% end %>

				<% end %>
			</div>
		</div>




		<div class="row">
			<table class="table table-bordered">
				<tr>
					<th class="table info", style="width: 25%;">ハンドルネーム</th>
					<td class="table">
						<%= @user.name %>
					</td>
				</tr>
		
				<tr>
					<th class="table info", style="width: 25%;">一言</th>
					<td class="table">
						<%= @user.introduction %>
					</td>
				</tr>
		
				<tr>
					<th class="table info", style="width: 25%;">ボイスチャット</th>
					<td class="table">
						<%= @user.voice %>
					</td>
				</tr>
	
				<tr>
					<th class="table info", style="width: 25%;">Twitter</th>
					<td class="table">
						<% if @user.twitter == nil %>
							未登録
						<% else %>
							<%= @user.twitter %>
						<% end %>
					</td>
				</tr>
	
				<tr>
					<th class="table info", style="width: 25%;">Discord</th>
					<td class="table">
						<% if (@user.discord_name == nil)||(@user.discord_number == nil) %>
							未登録
						<% else %>
							<%= @user.discord_name %>#<%= @user.discord_number %>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
