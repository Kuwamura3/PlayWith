<%= render "users/shared/error_messages", resource: @user %>
<div id="comment_validation">
	<% if @users_comment.present? %>
		<%= render "users/shared/error_messages", resource: @users_comment %>
	<% end %>
</div>
<div class="row">
	<div class="col-md-8">

		<div class="row">
			<div class="col-md-4", style="padding-bottom: 10px;">
				<h3>プロフィール</h3>
				<% if @user.image_id.present? %>
					<%= attachment_image_tag @user, :image, :size => "100x100" %>
				<% else %>
					<%= image_tag "noimage.png", :size => "100x100" %>
				<% end %>
			</div>

			<% if user_signed_in? %>
				<div class="col-md-8", style="padding-top: 60px;">

					<% if @user == current_user %>
						<p><%= link_to "フォロー・フォロワー一覧", relationships_path, class: "btn btn-primary" %></p>
						<p><%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary" %></p>
					<% else %>

				<div id="follow_buttons_<%= @user.id %>">
					<%= render partial: "public/relationships/button", locals: { user: @user } %>
				</div>

					<% end %>
				</div>
			<% end %>
		</div>

		<%= render "public/users/profile", user: @user %>

		<div class="row">
			<h4>遊びたいゲーム</h4>
			<% if @users_games.present? %>
				<%= render "public/users/gamelist", users_games: @users_games %>
			<% else %>
				<div class="col-md-12">
					<p>
						ゲームは登録されていません　
						<% if @user == current_user %>
							<%= link_to "追加する", edit_user_path(@user), class: "btn btn-primary" %>
						<% end %>
					</p>
				</div>
			<% end %>
		</div>

		<div id="comment_list">
			<%= render partial: "public/users_comments/list", locals: { users_comments: @users_comments } %>
		</div>
	</div>

	<div class="col-md-4">
		<div class="col-md-offset-1 col-md-11">
			<% if @user == current_user %>
				<div id="notifications_form", class="row post-form">
					<% if @users_games.present? %>
						<%= render partial: "public/notifications/form", locals: { user: @user, users_games: @users_games } %>
					<% end %>
				</div>

				<div id="notifications_list", class="row">
					<%= render partial: "public/notifications/index", locals: { notifications: @notifications } %>
				</div>
			<% end %>
		</div>
	</div>
</div>
