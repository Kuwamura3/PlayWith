<table class="table table-bordered">
	<tr class="info">
		<th class="t5">
		</th>
		<th class="t25">
			ユーザー名
		</th>
		<th class="t15">
			ボイスチャット可否
		</th>
		<th class="t40">
			遊んでいるゲーム
		</th>

		<% if user_signed_in? %>
			<th class="t15">
				フォロー／解除
			</th>
		<% end %>

	</tr>

	<% users.each do |user| %>
		<tr>
			<td class="t5">

				<% if user.image_id.present? %>
					<%= attachment_image_tag user, :image, :size => "40x40" %>
				<% else %>
					<%= image_tag "noimage.png", :size => "40x40" %>
				<% end %>

			</td>
			<td class="t25">
				<%= link_to user_path(user) do %>
					<%= user.name %>
				<% end %>
			</td>
			<td class="t15">
				<%= user.voice %>
			</td>
			<td class="t40">
				<% if user.playings.present? %>
					<% user.playings.sample(3).each do |game| %>
						<span><%= game.title %>　</span>
					<% end %>
				<% end %>
				<% if user.playings.count >= 4 %>
					<span>etc...</span>
				<% end %>
			</td>

			<% if user_signed_in? %>
				<td id="follow_buttons_<%= user.id %>", class="t15">
					<%= render partial: "public/relationships/button", locals: { user: user } %>
				</td>
			<% end %>

		</tr>
	<% end %>
</table>

<div class="col-md-4">
	<%= paginate users %>
</div>
