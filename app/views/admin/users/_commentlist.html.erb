<div class="row", style="padding-top: 20px;">
	<h4 class="col-md-2">コメント</h4>
</div>
<div class="row">
	<table class="table table-hover col-md-offset-1 col-md-11">
		<% users_comments.each do |comment| %>
			<tr>
				<td class="table-noborder", style="width: 20%;">
					<%= link_to admin_user_path(comment.user) do %>
						<%= comment.user.name %>
					<% end %>
				</td>
				<td class="table-noborder", style="width: 40%;">
					<%= comment.text %>
				</td>
				<td class="table-noborder", style="width: 20%;">
					<%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
				</td>
				<td class="table-noborder", style="width: 20%;"></td>
			</tr>
		<% end %>
	</table>
</div>
