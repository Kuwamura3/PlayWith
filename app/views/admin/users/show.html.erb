<%= render "users/shared/error_messages", resource: @user %>
<div class="row">
	<div class="col-md-8">

		<div class="row">
			<div class="col-md-4", style="padding-bottom: 10px;">
				<h3>プロフィール</h3>
				<% if @user.image_id.present? %>
					<%= attachment_image_tag @user, :image, :size => "100x100" %>
				<% else %>
					<%= image_tag "noimage.png", :size => "100x100" %>
				<% end %>
			</div>

			<div class="col-md-8", style="padding-top: 60px;">
				<p><%= link_to "フォロー・フォロワー一覧", admin_relationships_path(@user), class: "btn btn-primary" %></p>
				<p><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-primary" %></p>
			</div>
		</div>

		<%= render "public/users/profile", user: @user %>

		<div class="row">
			<h4>遊びたいゲーム</h4>
			<% if @users_games.present? %>
				<%= render "admin/users/gamelist", users_games: @users_games %>
			<% else %>
				<div class="col-md-12">
					<p>
						ゲームは登録されていません　
					</p>
				</div>
			<% end %>
		</div>

		<div id="comment_list">
			<%= render partial: "admin/users/commentlist", locals: { users_comments: @users_comments } %>
		</div>
	</div>
</div>
