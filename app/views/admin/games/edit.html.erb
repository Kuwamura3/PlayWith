<div class="row">
	<h3>ゲーム統合</h3>
	<div class="col-md-offset-1 col-md-11 form-group", style="padding-top: 20px;">
		<%= form_with(url: admin_games_path, method: :delete, class: "form-inline", local: true) do |f| %>
			<%= f.label :"残すゲーム　", class: "control-label" %>
			<%= f.collection_select(:game_id_remain, @games, :id, :title, {}, {class: "form-control"}) %>
			</br></br>
			<%= f.label :"消すゲーム　", class: "control-label" %>
			<%= f.collection_select(:game_id, @games, :id, :title, {}, {class: "form-control"}) %>
			</br></br>
			上記二つのゲームを　
			<%= f.submit "統合する", class: "btn btn-md btn-info" %>
		<% end %>
	</div>
</div>
