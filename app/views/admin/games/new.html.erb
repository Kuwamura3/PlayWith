<% if @game.present? %>
	<%= render "users/shared/error_messages", resource: @game %>
<% end %>
<div class="row">
	<h3>ゲーム追加</h3>
	<div class="col-md-offset-1 col-md-11 form-group", style="padding-top: 20px;">
		<%= form_with(model:@game, url: admin_games_path, method: :post, class: "form-inline", local: true) do |f| %>
			<%= f.label :"ゲームタイトル　", class: "control-label" %>
			<%= f.text_field :title, class: "title form-control" %>
			<%= f.submit "追加", class: "btn btn-md btn-primary" %>
		<% end %>
	</div>

	<div class="col-md-offset-10 col-md-2">
		<%= link_to "ゲーム一覧に戻る", admin_games_path, class:"btn btn-default btn-md" %>
	</div>
</div>
