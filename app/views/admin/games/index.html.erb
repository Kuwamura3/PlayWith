<div class="row">
	<h3>ゲーム一覧</h3>
	<% if @games.present? %>
		<%= render partial: "admin/games/table", locals: { games: @games } %>
	<% else %>
		<h4>　ゲームはありません。</h4>
		<div class="col-md-2", style="padding-top: 20px;">
			<%= link_to "ゲーム追加", new_admin_game_path, class:"btn btn-info btn-md" %>
		</div>
		<div class="col-md-offset-9 col-md-3", style="padding-top: 20px;">
			<%= link_to "ゲーム統合", edit_admin_games_path, class:"btn btn-primary btn-lg" %>
		</div>
	<% end %>
</div>
