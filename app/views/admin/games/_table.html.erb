<!--編集途中-->
<table class="table table-bordered">
	<tr class="info">
		<th>ゲームタイトル</th>
		<th>遊んでいるユーザー人数</th>
	</tr>

	<% games.each do |game| %>
		<tr>
			<td>
				<!--%= link_to users_gamer_path(game_id: game.id) do %-->
					<%= game.title %>
				<!--% end %-->
			</td>
			<td id="games_counts_<%= game.id %>">
				<%= render partial: "public/users_games/count", locals: { game: game } %>
			</td>
		</tr>
	<% end %>
</table>

<div class="col-md-4">
	<%= paginate games %>
</div>

<div class="col-md-offset-5 col-md-3", style="padding-top: 20px;">
	<%= link_to "ゲーム追加", new_admin_game_path, class:"btn btn-info btn-lg" %>
</div>
